            android:id="@+id/bh_5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#c0c0c0"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirmTripPrice2Person"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/btnConfirmTripReserve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/reservar"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bh_5" />

        <Button
            android:id="@+id/btnConfirmTripCancelReserve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/cancelar_reserva"
            android:visibility="gone"
            android:backgroundTint="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirmTripReserve" />

        <Button
            android:id="@+id/btnConfirmTripCancel"
            android:layout_width="0dp"
            style="@style/ButtonOutlined"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/cancelar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirmTripCancelReserve" />

        <Button
