            android:textColor="#414141"
            app:layout_constraintBottom_toBottomOf="@+id/tvConfirmTripPrice3Person"
            app:layout_constraintStart_toEndOf="@+id/tvConfirmTripPrice3Person"
            app:layout_constraintTop_toTopOf="@+id/tvConfirmTripPrice3Person" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
